<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/main_title_bar"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout

            android:id="@+id/main_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
           />



    </LinearLayout>
   <LinearLayout
       android:id="@+id/main_bottom_bar"
       android:layout_width="match_parent"
       android:layout_height="55dp"
       android:layout_alignParentBottom="true"
       android:background="@android:color/white"
       android:orientation="horizontal">
       <RelativeLayout
           android:id="@+id/bottom_bar_shouye_btn"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1">
           <TextView
               android:id="@+id/bottom_bar_shouye_text_btn"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="3dp"
               android:gravity="center"
               android:singleLine="true"
               android:text="首页"
               android:textColor="#666666"
               android:textSize="16sp" />
           <ImageView
               android:id="@+id/bottom_bar_shouye_image_btn"
               android:layout_width="27dp"
               android:layout_height="27dp"
               android:layout_above="@+id/bottom_bar_shouye_text_btn"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="3dp"
               android:src="@drawable/shouye"/>

       </RelativeLayout>
       <RelativeLayout
           android:id="@+id/bottom_bar_gangwei_btn"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1">
           <TextView
               android:id="@+id/bottom_bar_gangwei_text_btn"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="3dp"
               android:gravity="center"
               android:singleLine="true"
               android:text="岗位"
               android:textColor="#666666"
               android:textSize="16sp" />
           <ImageView
               android:id="@+id/bottom_bar_gangwei_image_btn"
               android:layout_width="27dp"
               android:layout_height="27dp"
               android:layout_above="@+id/bottom_bar_gangwei_text_btn"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="3dp"
               android:src="@drawable/gangwei"/>

       </RelativeLayout>
       <RelativeLayout
           android:id="@+id/bottom_bar_xiaoxi_btn"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1">
           <TextView
               android:id="@+id/bottom_bar_xiaoxi_text_btn"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="3dp"
               android:gravity="center"
               android:singleLine="true"
               android:text="消息"
               android:textColor="#666666"
               android:textSize="16sp" />
           <ImageView
               android:id="@+id/bottom_bar_xiaoxi_image_btn"
               android:layout_width="27dp"
               android:layout_height="27dp"
               android:layout_above="@+id/bottom_bar_xiaoxi_text_btn"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="3dp"
               android:src="@drawable/xiaoxi"/>

       </RelativeLayout>
       <RelativeLayout
           android:id="@+id/bottom_bar_wo_btn"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="1">
           <TextView
               android:id="@+id/bottom_bar_wo_text_btn"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="3dp"
               android:gravity="center"
               android:singleLine="true"
               android:text="我"
               android:textColor="#666666"
               android:textSize="16sp" />
           <ImageView
               android:id="@+id/bottom_bar_wo_image_btn"
               android:layout_width="27dp"
               android:layout_height="27dp"
               android:layout_above="@+id/bottom_bar_wo_text_btn"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="3dp"
               android:src="@drawable/wo"/>

       </RelativeLayout>
   </LinearLayout>
</RelativeLayout>